" Load plugins using Pathogen. Don't worry if this bit doesn't make sense.
call pathogen#runtime_append_all_bundles()

" Bundle: git://github.com/altercation/vim-colors-solarized.git
" Bundle: https://github.com/vim-scripts/perl-support.vim.git
" Bundle: https://github.com/scrooloose/nerdcommenter.git
" Bundle: https://github.com/bronson/vim-trailing-whitespace.git

colorscheme solarized
set background=dark
syntax enable
set statusline=%F%m%r%h%w\ [FORMAT=%{&ff}]\ [TYPE=%Y]\ [ASCII=\%03.3b]\ [HEX=\%02.2B]\ [POS=%04l,%04v][%p%%]\ [LEN=%L]
set laststatus=2
set bs=2
filetype plugin on

au BufReadPost *.pl   set keywordprg=perldoc\ -f

:set paste

nnoremap <silent> = !perltidy -q<Enter>
vnoremap <silent> = :!perltidy -q<Enter>

" Indent using tabs (while in visual mode)
vnoremap < <gv
vnoremap > >gv
" make tab in v mode ident code
vmap <tab> >gv
vmap <s-tab> <gv
" make tab in normal mode ident code
nmap <tab> I<tab><esc>
nmap <s-tab> ^i<bs><esc>

" tabs
set softtabstop=4
set shiftwidth=4
set tabstop=4
set smarttab
set expandtab

" indents
set smartindent
set autoindent

" show matching brackets
autocmd FileType perl set showmatch

" show line numbers
autocmd FileType perl set number

let mapleader = ","


command -range=% -nargs=* Tidy <line1>,<line2>!
  \perltidy -pbp <args>
